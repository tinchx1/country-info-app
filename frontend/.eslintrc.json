{
  "extends": [
    "plugin:@typescript-eslint/strict",
    "plugin:@typescript-eslint/stylistic",
    "next/core-web-vitals"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": "return"
      },
      {
        "blankLine": "always",
        "prev": [
          "const",
          "let",
          "var"
        ],
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": [
          "const",
          "let",
          "var"
        ],
        "next": [
          "const",
          "let",
          "var"
        ]
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": [
          "if",
          "try",
          "class",
          "function"
        ]
      },
      {
        "blankLine": "always",
        "prev": [
          "if",
          "try",
          "class",
          "function"
        ],
        "next": "*"
      }
    ]
  }
}